<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/image_weather"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/textTime"
        style="@style/TextViewPrimary"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@+id/image_weather"
        app:layout_constraintTop_toTopOf="@id/image_weather"
        app:layout_constraintBottom_toBottomOf="@id/textDescription"
        tools:text="Time"/>
    <TextView
        android:id="@+id/textDescription"
        style="@style/TextViewPrimary"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@+id/image_weather"
        app:layout_constraintTop_toTopOf="@id/textTime"
        app:layout_constraintBottom_toBottomOf="@id/image_weather"
        tools:text="Description"/>
    <TextView
        android:id="@+id/textTemp"
        style="@style/TextViewTemp"
        app:layout_constraintTop_toTopOf="@id/image_weather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/image_weather"
        android:layout_margin="10dp"
        tools:text="15C"/>
</androidx.constraintlayout.widget.ConstraintLayout>